<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TranslatorActivity"
    android:orientation="vertical"
    android:background="@color/light"
    android:padding="5dp">

    <TextView
        android:id="@+id/sourceLanguage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="English"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/sourceBox"
        android:layout_width="0dp"
        android:layout_height="150dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="5dp"
        android:padding="5dp"
        android:gravity="top|left"
        android:background="@drawable/textbox_bg"
        app:layout_constraintEnd_toStartOf="@+id/sourceCopyLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sourceLanguage" />

    <LinearLayout
        android:id="@+id/sourceCopyLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/sourceBox">

        <ImageView
            android:id="@+id/sourceCopyBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:src="@drawable/ic_copy" />

        <ImageView
            android:id="@+id/sourceCutBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:src="@drawable/ic_cut" />

        <ImageView
            android:id="@+id/sourcePasteBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:src="@drawable/ic_paste" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/translateBtnsLayout"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginTop="13dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="@+id/sourceBox"
        app:layout_constraintStart_toStartOf="@+id/sourceBox"
        app:layout_constraintTop_toBottomOf="@+id/sourceBox">

        <ImageView
            android:id="@+id/translateDownBtn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/ic_arrow_down" />

        <ImageView
            android:id="@+id/translateUpBtn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:src="@drawable/ic_arrow_up" />

    </LinearLayout>

    <TextView
        android:id="@+id/targetLanguage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Urdu"
        android:layout_marginBottom="5dp"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/targetBox"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/targetBox"
        android:layout_width="0dp"
        android:layout_height="150dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="5dp"
        android:padding="5dp"
        android:gravity="top|left"
        android:background="@drawable/textbox_bg"
        app:layout_constraintEnd_toStartOf="@+id/sourceCopyLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/translateBtnsLayout" />

    <LinearLayout
        android:id="@+id/targetCopyLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/targetBox">

        <ImageView
            android:id="@+id/targetCopyBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:src="@drawable/ic_copy" />

        <ImageView
            android:id="@+id/targetCutBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:src="@drawable/ic_cut" />

        <ImageView
            android:id="@+id/targetPasteBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:src="@drawable/ic_paste" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>