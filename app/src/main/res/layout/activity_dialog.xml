<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent">

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="7dp"
        android:background="@drawable/dialog_bg">

        <ImageView
            android:id="@+id/swapBtn"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/swap"
            android:layout_gravity="center"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Spinner
                android:id="@+id/sourceLanguage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="20sp"/>

            <Spinner
                android:id="@+id/targetLanguage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:layout_marginLeft="10dp"
                android:layout_alignParentEnd="true"/>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/sourceBox"
                    android:layout_width="wrap_content"
                    android:layout_height="100dp"
                    android:textSize="14sp"
                    android:textColor="@color/black"
                    android:background="@drawable/dialog_textbox_bg"
                    android:gravity="top|left"
                    android:padding="5dp"
                    android:layout_weight="1"
                    android:layout_marginBottom="5dp"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginLeft="5dp">

                    <ImageView
                        android:id="@+id/sourceCopyBtn"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@drawable/copy"
                        android:layout_marginTop="5dp"/>

                    <ImageView
                        android:id="@+id/sourceCutBtn"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@drawable/cut"
                        android:layout_marginTop="10dp"/>

                    <ImageView
                        android:id="@+id/sourcePasteBtn"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@drawable/paste"
                        android:layout_marginTop="10dp"/>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/targetBox"
                    android:layout_width="wrap_content"
                    android:layout_height="100dp"
                    android:textSize="14sp"
                    android:textColor="@color/black"
                    android:background="@drawable/dialog_textbox_bg"
                    android:gravity="top|left"
                    android:padding="5dp"
                    android:layout_weight="1"
                    android:layout_marginBottom="5dp"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginLeft="5dp">

                    <ImageView
                        android:id="@+id/targetCopyBtn"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@drawable/copy"
                        android:layout_marginTop="5dp"/>

                    <ImageView
                        android:id="@+id/targetCutBtn"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@drawable/cut"
                        android:layout_marginTop="10dp"/>

                    <ImageView
                        android:id="@+id/targetPasteBtn"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@drawable/paste"
                        android:layout_marginTop="10dp"/>

                </LinearLayout>

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/translateBtn"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_centerInParent="true"
                    android:src="@drawable/translate" />

            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>